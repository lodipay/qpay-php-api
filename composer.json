{
    "name": "qpaymn/api",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Qpay\\Api\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Tsetsee",
            "email": "tsetsee.yugi@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^8.1",
        "guzzlehttp/guzzle": "^7.5",
        "spatie/data-transfer-object": "^3.9",
        "nesbot/carbon": "^2.62",
        "gmponos/guzzle_logger": "^2.2",
        "psr/log": "^3.0",
        "tsetsee/php-dto": "^0.1.2"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.8",
        "pestphp/pest": "^1.22",
        "friendsofphp/php-cs-fixer": "^3.11",
        "monolog/monolog": "^3.2"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "fixer": "php-cs-fixer fix",
        "phpstan": "phpstan analyze",
        "unit-test": "pest",
        "test": [
            "@fixer",
            "@phpstan",
            "@unit-test"
        ]
    }
}
