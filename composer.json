{
    "name": "tsetsee/qpay-php-api",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Tsetsee\\Qpay\\Api\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Tsetsee",
            "email": "tsetsee.yugi@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^8.1",
        "nesbot/carbon": "^2.62",
        "tsetsee/php-dto": "^3.1.0",
        "tsetsee/tse-guzzle": "^0.0.2"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.8",
        "pestphp/pest": "^1.22",
        "friendsofphp/php-cs-fixer": "^3.11",
        "monolog/monolog": "^3.2"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "fixer": "php-cs-fixer fix",
        "phpstan": "phpstan analyze",
        "unit-test": "pest",
        "test": [
            "@fixer",
            "@phpstan",
            "@unit-test"
        ]
    }
}
